<div class="row">
    {{#each this}}
    <div class="col-sm-3">
        <h3>{{this.title}}</h3>
        <img class="img-responsive img-rounded" src="{{this.imageUrl}}" style="width:100%; height: auto" />
        <p class="text-justify">{{this.description}}</p>
        <p><a class="btn btn-info" href="#/sells/{{this._id}}" id="view-ad-details" role="button">View details &raquo;</a></p>
    </div>
    {{/each}}
